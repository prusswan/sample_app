<div class="micropost span-11">
  <div class="span-10">
    <span class="content span-10"><%= wrap(micropost.content) %></span>
    <span class="timestamp span-10">
      Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    </span>
  </div>
  <div class="span-1 last">
    <%# potential workaround for: %>
    <%# http://ruby.railstutorial.org/chapters/user-microposts#code:micropost_partial_with_delete %>
    <%# user = micropost.user rescue User.find(micropost.user_id) %>
    <%# if current_user?(user) %>
    <% if current_user?(micropost.user) %>
      <%= link_to "delete", micropost, :method => :delete,
                                       :confirm => "You sure?",
                                       :title => micropost.content %>

    <% end %>
  </div>
</div>
<hr />
